# Database (Required)
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_ROLE_KEY=xxx

# Auth (Required)  
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_xxx
CLERK_SECRET_KEY=sk_xxx

# Cron Jobs Security (Optional)
CRON_SECRET=your_secure_random_string_for_cron_authentication

# AI APIs (Required)
OPENAI_API_KEY=sk-xxx
PERPLEXITY_API_KEY=pplx-xxx

# GitHub (Optional)
GITHUB_TOKEN=ghp_xxx

# HuggingFace (Optional)
HUGGINGFACE_TOKEN=hf_xxx

# Y Combinator Data Import
# Option 1: Manual JSON files - Use the /api/admin/import-yc-json endpoint or npm run import:yc CLI
# Option 2: Apify Integration - Direct API access to Y Combinator scraper data
APIFY_API_TOKEN=apify_api_xxx
APIFY_ACTOR_ID=your_yc_scraper_actor_id
APIFY_DATASET_ID=your_default_dataset_id

# Cost Controls (Required)
MAX_DAILY_API_COST_USD=100
MAX_USER_DAILY_COST_USD=10

# Clerk Configuration (Required)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Application Configuration (Optional)
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Caching (Required for cost optimization)
UPSTASH_REDIS_URL=https://your-redis-xxxxx.upstash.io
UPSTASH_REDIS_TOKEN=your_token_here

# Logging (Optional)
LOG_LEVEL=info

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60